<%= form_for @topic do |f| %>

	<div class="col-md-6" >
		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control", placeholder: "Enter Title", autofocus: true %>
		</div>

		<div class="form-group">
			<%= f.label :description %>
			<%= f.text_area :description, rows: 5, class: "form-control", placeholder: "Enter Body" %>
		</div>

		<div class="form-group">
			<%= f.submit class: "btn btn-default" %>
		</div>
	</div>

<% end %>

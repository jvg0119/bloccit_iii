
<% if policy(Vote.new).create? %>
	
	<div class="pull-left vote-arrows">
		<div>
			<%#= link_to "", post_up_vote_path(post), method: :post, class: 'glyphicon glyphicon-chevron-up' %>
			<%= link_to "", post_up_vote_path(post), class: "glyphicon glyphicon-chevron-up #{ current_user.voted(post) && current_user.voted(post).up_vote? ? 'voted' : '' }" %>
			
		</div>

		<div><%= post.points %></div> 

		<div>
			<%#= link_to "", post_down_vote_path(post), method: :post, class: 'glyphicon glyphicon-chevron-down' %>
			<%= link_to "", post_down_vote_path(post), class: "glyphicon glyphicon-chevron-down #{(current_user.voted(post) && current_user.voted(post).down_vote?) ? 'voted' : '' }" %>
		</div>
	</div>

<% end %>



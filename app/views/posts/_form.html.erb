<%= form_for @post do |f| %>

	<div class="col-md-6" >
		<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title, class: "form-control", placeholder: "Enter Title", autofocus: true %>
		</div>

		<div class="form-group">
			<%= f.label :body %>
			<%= f.text_area :body, rows: 5, class: "form-control", placeholder: "Enter Body" %>
		</div>

		<div class="form-group">
			<%= f.submit class: "btn btn-default" %>
		</div>
	</div>

<% end %>

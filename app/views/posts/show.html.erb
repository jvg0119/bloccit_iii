<h1><%= markdown_to_html(@post.title) %></h1>

<div class="row">
	<div class="col-md-8">

		<small>
			submitted <%= time_ago_in_words(@post.created_at) %> ago by
			<%= @post.user.name %>	
			<%= image_tag(@post.user.avatar.small) if @post.user.avatar? %>
		</small>
		
		<p><%= markdown_to_html(@post.body) %>
		<p><%= image_tag(@post.image.profile.url) if @post.image? %></p>
	
	</div>
</div>

<%#= raw Markdown.new(@post.body).to_html %>

<%= link_to "Edit Post", edit_topic_post_path(@topic, @post), class: 'btn btn-default' if policy(@post).edit? %>

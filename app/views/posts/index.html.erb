<h1>Posts</h1>

<% @posts.each do |post| %>
	<div class="media">
    	<div class="media-body">
       		<h4 class="media-heading">
         		<%= link_to post.title, post %>
       		</h4>
       		<p>
       			&nbsp;&nbsp;submitted <%= time_ago_in_words post.created_at %> ago
         		&nbsp;&nbsp;by <%= post.user.name %>
         		&nbsp;&nbsp;<%= pluralize post.comments.count, "Comment" %>
       		</p>
     	</div>
   	</div>
<% end %>
